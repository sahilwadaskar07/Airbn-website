<% layout("/layouts/boilerplate")%>
<div class="row">
    <h1 class="col-6 offset-3"> SignUp on Wanderlust</h1>
    <div class="col-6 offset-3" >
        <form action="/signup" method="POST" class="nedds-validate">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" id="eamil" type="eamil" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input name="password" id="password" type="password" class="form-control" required />
                        </div>
                    <button class="btn btn-black add-btn "> Sign Up </button>
        </form>
    </div>
</div>